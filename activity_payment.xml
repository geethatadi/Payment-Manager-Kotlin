<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/recipientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipient Name"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/recipientEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipient Email"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp" />

    <!-- Payment Option Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Payment Method"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp"/>

    <RadioGroup
        android:id="@+id/paymentOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/creditCardOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Card" />

        <RadioButton
            android:id="@+id/debitCardOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debit Card" />

        <RadioButton
            android:id="@+id/paypalOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PayPal" />
    </RadioGroup>

 
    <TextView
        android:id="@+id/dueAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Amount: $100"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <!-- Authorize Payment Button -->
    <Button
        android:id="@+id/authorizePaymentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Authorize Payment" />
</LinearLayout>
